<UserControl x:Class="KajsaJosefssonCV.Views.ExperienceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer Margin="20">
        <StackPanel>
            <TextBlock Text="Arbetslivserfarenhet" FontSize="22" FontWeight="Bold" Margin="0 0 0 12"/>
            <ItemsControl ItemsSource="{Binding Experiences}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="0 0 0 12" BorderBrush="#EEE" BorderThickness="0 0 0 1">
                            <StackPanel>
                                <TextBlock Text="{Binding Role}" FontSize="16" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal" Margin="0 4 0 4">
                                    <TextBlock Text="{Binding Company}" FontStyle="Italic"/>
                                    <TextBlock Text=" — "/>
                                    <TextBlock Text="{Binding Period}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>