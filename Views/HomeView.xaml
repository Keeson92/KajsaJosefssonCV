<UserControl x:Class="KajsaJosefssonCV.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="{Binding PageTitle}" FontSize="24" FontWeight="Bold" Margin="20" TextAlignment="Center"/>
        <TextBlock Text="{Binding WelcomeText}" FontSize="18" Margin="8" TextAlignment="Center"/>
    </StackPanel>
</UserControl>